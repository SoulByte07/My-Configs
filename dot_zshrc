
# Created by newuser for 5.9
eval "$(starship init zsh)"

# fzf
source <(fzf --zsh)

# the fuck cli,  correct the previous command
eval $(thefuck --alias)

# chezmoi- git init connfig file
export PATH="$HOME/.local/bin:$PATH"

# BEGIN_KITTY_SHELL_INTEGRATION
if test -e "/usr/lib64/kitty/shell-integration/zsh/kitty.zsh"; then
    source "/usr/lib64/kitty/shell-integration/zsh/kitty.zsh"
fi
# END_KITTY_SHELL_INTEGRATION


# default shell
export SHELL=/usr/bin/zsh


# default text editor
export EDITOR=nvim
export VISUAL=nvim


# Alias

# mount proton_drive via rclone
alias mount_proton='rclone mount proton_drive: ~/Proton_Drive --config=/home/soul/.config/rclone/rclone.conf --vfs-cache-mode writes --vfs-cache-max-age 1h --vfs-cache-poll-interval 1m --no-modtime --no-checksum --cache-dir=/var/rclone'

# neovim
alias vim='nvim'

# rmtrash alisas
alias rm='rmtrash'
alias rmdir='rmdirtrash'

alias fk='fuck'

alias cz='chezmoi'

# ranger
alias rg='ranger'

# copy content to clipboard
alias copyfile='xclip -selection clipboard <'

# eza: a better ls alternative
alias ls="eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions"

# zoxide: better cd
eval "$(zoxide init zsh --cmd cd)"

alias inv='nvim $(fzf -m --preview="bat --color=always {}")'


# open VS codlium
alias code='flatpak run com.vscodium.codium'

# Enable command history
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history


# Prevent duplicate entries in history
setopt HIST_IGNORE_DUPS  # Ignore duplicate commands
setopt HIST_FIND_NO_DUPS  # Do not display duplicates when searching history


#important functionality
source /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source ~/.zsh-autocomplete/zsh-autocomplete.plugin.zsh


# key binding or mapping
bindkey '^H' backward-kill-word



